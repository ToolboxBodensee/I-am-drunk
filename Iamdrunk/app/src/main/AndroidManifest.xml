<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.toolboxbodensee.iamdrunk" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Toiletenfinden"
            android:label="@string/title_activity_toiletenfinden"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".PromilleRechnerActivity"
            android:label="@string/title_activity_promille_rechner"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".MeetPeopleActivity"
            android:label="@string/title_activity_meet_people"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.toolboxbodensee.iamdrunk.MainActivity" />
        </activity>
        <activity
            android:name=".GeradeLaufenMinispielActivity"
            android:label="@string/title_activity_gerade_laufen_minispiel"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.toolboxbodensee.iamdrunk.MainActivity" />
        </activity>
        <activity
            android:name=".LiegestutzenActivity"
            android:label="@string/title_activity_liegestutzen"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.toolboxbodensee.iamdrunk.MainActivity" />
        </activity>
    </application>

</manifest>
