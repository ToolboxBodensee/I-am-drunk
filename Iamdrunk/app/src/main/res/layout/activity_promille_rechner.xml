<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.toolboxbodensee.iamdrunk.PromilleRechnerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/promille_ergebnis"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berechnen"
        android:id="@+id/promille_berechnen"
        android:layout_above="@+id/promille_ergebnis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alkoholgehalt(%)"
                android:id="@+id/alkoholgehalt_label"
                android:layout_column="0"
                android:textSize="12dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alkoholgehalt_input"
                android:text="0.0"
                android:layout_column="2"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Größe des Getränks(L)"
                android:id="@+id/menge_label"
                android:layout_column="3"
                android:textSize="12dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menge_input"
                android:layout_column="4"
                android:text="0.0"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anzahl"
                android:id="@+id/anzahl_label"
                android:layout_column="5"
                android:textSize="12dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/anzahl_input"
                android:layout_column="6"
                android:text="0"
                android:textSize="12dp" />

        </TableRow><TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alkoholgehalt(%)"
            android:id="@+id/alkoholgehalt_label2"
            android:layout_column="0"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alkoholgehalt_input2"
            android:text="0.0"
            android:layout_column="2"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Größe des Getränks(L)"
            android:id="@+id/menge_label2"
            android:layout_column="3"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menge_input2"
            android:layout_column="4"
            android:text="0.0"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anzahl"
            android:id="@+id/anzahl_label2"
            android:layout_column="5"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anzahl_input2"
            android:layout_column="6"
            android:text="0"
            android:textSize="12dp" />

    </TableRow><TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alkoholgehalt(%)"
            android:id="@+id/alkoholgehalt_label3"
            android:layout_column="0"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alkoholgehalt_input3"
            android:text="0.0"
            android:layout_column="2"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Größe des Getränks(L)"
            android:id="@+id/menge_label3"
            android:layout_column="3"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menge_input3"
            android:layout_column="4"
            android:text="0.0"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anzahl"
            android:id="@+id/anzahl_label3"
            android:layout_column="5"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anzahl_input3"
            android:layout_column="6"
            android:text="0"
            android:textSize="12dp" />

    </TableRow><TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alkoholgehalt(%)"
            android:id="@+id/alkoholgehalt_label4"
            android:layout_column="0"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alkoholgehalt_input4"
            android:text="0.0"
            android:layout_column="2"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Größe des Getränks(L)"
            android:id="@+id/menge_label4"
            android:layout_column="3"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menge_input4"
            android:layout_column="4"
            android:text="0.0"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anzahl"
            android:id="@+id/anzahl_label4"
            android:layout_column="5"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anzahl_input4"
            android:layout_column="6"
            android:text="0"
            android:textSize="12dp" />

    </TableRow><TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alkoholgehalt(%)"
            android:id="@+id/alkoholgehalt_label5"
            android:layout_column="0"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alkoholgehalt_input5"
            android:text="0.0"
            android:layout_column="2"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Größe des Getränks(L)"
            android:id="@+id/menge_label5"
            android:layout_column="3"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menge_input5"
            android:layout_column="4"
            android:text="0.0"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anzahl"
            android:id="@+id/anzahl_label5"
            android:layout_column="5"
            android:textSize="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anzahl_input5"
            android:layout_column="6"
            android:text="0"
            android:textSize="12dp" />

    </TableRow>

    </TableLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/geschlecht"
        android:layout_below="@+id/tableLayout"
        android:layout_toRightOf="@+id/mannlich_label"
        android:layout_toEndOf="@+id/mannlich_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Männlich"
        android:id="@+id/mannlich_label"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/geschlecht"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weiblich"
        android:id="@+id/weiblich_label"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/geschlecht"
        android:layout_toRightOf="@+id/geschlecht"
        android:layout_toEndOf="@+id/geschlecht" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Körpergewicht (kg)"
        android:id="@+id/korpergewicht_label"
        android:textSize="12dp"
        android:layout_below="@+id/geschlecht"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/korpergewicht_input"
        android:textSize="12dp"
        android:layout_below="@+id/korpergewicht_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="75"
        android:layout_alignRight="@+id/mannlich_label"
        android:layout_alignEnd="@+id/mannlich_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zeit vergangen (in h) seit erstem Konsum"
        android:id="@+id/zeit_label"
        android:textSize="12dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/korpergewicht_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/zeit_input"
        android:text="0"
        android:textSize="12dp"
        android:layout_below="@+id/zeit_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/korpergewicht_input"
        android:layout_alignEnd="@+id/korpergewicht_input" />

</RelativeLayout>
