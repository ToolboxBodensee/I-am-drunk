<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.toolboxbodensee.iamdrunk.PunktAntippenMinispielActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/punkt_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tap on the image to gain time"
        android:id="@+id/timer_label"
        android:layout_alignBottom="@+id/punkt_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/punkt_button"
        android:layout_toRightOf="@+id/punkt_button"
        android:layout_toEndOf="@+id/punkt_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/score_label"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageButton"
        android:src="@drawable/punkt19302087"
        android:layout_below="@+id/punkt_button"
        android:layout_alignRight="@+id/score_label"
        android:layout_alignEnd="@+id/score_label"
        android:layout_marginTop="65dp" />
</RelativeLayout>
